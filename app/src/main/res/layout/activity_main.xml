<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/smartfondo"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <Button
                style="@style/bStyle"
                android:id="@+id/bHotel"
                android:background="@drawable/ic_hoteles"
                android:onClick="pasarHotel"
                />

            <Button
                style="@style/bStyle"
                android:id="@+id/bBar"
                android:onClick="pasarBar"
                android:background="@drawable/ic_coctel"
                />

            <Button
                style="@style/bStyle"
                android:id="@+id/bPublic"
                android:background="@drawable/ic_turismo"
                android:onClick="pasarPublic"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >


            <Button
                style="@style/bStyle"
                android:id="@+id/bSitios"
                android:background="@drawable/ic_sitios"
                android:onClick="pasarSitios"
                />
            <Button
                style="@style/bStyle"
                android:id="@+id/bMapa"
                android:background="@drawable/ic_lucifer"
                android:onClick="pasarMapa"
                />
        </LinearLayout>

    </LinearLayout>


</ScrollView>
